<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>


    <bean id="anotherQuote" class="java.lang.String">
        <constructor-arg value="trust me!"/>
    </bean>

    <bean id="InjectRandomInt" class="real_spring.InjectRandomIntAnnotationBeanPostProcessor"/>


    <bean id="talkingRobot" class="real_spring.TalkingRobotImpl">
        <constructor-arg>
            <list>
                <ref bean="terminatorQuoter"/>
                <ref bean="shakespeareQuoter"/>
            </list>
        </constructor-arg>

    </bean>

    <bean id="terminatorQuoter" class="real_spring.TerminatorQuoter">
        <property name="messages">
            <list>
                <value>I'll be back</value>
                <ref bean="anotherQuote"/>
                <value>Astalavista baby</value>
            </list>
        </property>
    </bean>




    <bean id="shakespeareQuoter" class="real_spring.ShakespeareQuoter">
        <property name="message" value="2 B || ! 2 B"/>
    </bean>

</beans>

